#!/bin/sh

# Clear the clipboard's contents
case $1 in
	-c|--clear|\
	-r|--reset)
		printf '' | "$0";
		printf 'Clipboard reset.\n' >&2
		exit $?
	;;
esac

# Copy to clipboard
if [ ! -t 0 ]; then
	if command -v pbcopy >/dev/null; then
		pbcopy
	else
		xclip -sel clip
	fi
else
	if command -v pbpaste >/dev/null; then
		pbpaste
	else
		xclip -o -sel clip
	fi
fi
