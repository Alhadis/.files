#!/bin/sh


folder=$(echo $1 | sed 's/s$//')
folder+="s"
shift

# Safety check
[ -d "$*" ] || [ -f "$*" ] || {
	>&2 echo "Not a directory: $*"
	exit 2;
};

name=$(basename "$*")
dest=~/Documents/MA/Images/Restored/$folder/

# Targeting a directory
[ -d "$*" ] && {
	dsclean
	zip -r "$name.zip" "$name"
	rm -rf "$name"
	mv "$name.zip" $dest
	exit 0;
};

# Targeting a file
[ -f "$*" ] && mv "$name" $dest;

dsclean
