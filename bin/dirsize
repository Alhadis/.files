#!/bin/sh
set -e

#
# dirsize: Display directory size(s) in bytes
#
du -ks "$@" | cut -f1 | dc -e '
	# Main loop
	[
		c     # Clear stack
		?     # Read next line
		z     # Count stack
		0 <B  # Branch to macro B if thereâ€™s more to process
	] sA

	# Calculation(s) being performed
	[
		1024 * p
		
		# Branch back to macro A:
		lA  # Load macro A
		x   # Execute it
	] sB
	
	# Entry-point:
	lA  # Load macro A
	x   # Execute it
'
