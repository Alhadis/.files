root = true

[*]
indent_style = tab
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
quote_type = double
curly_bracket_next_line = false
spaces_around_operators = false
spaces_around_brackets = none
indent_brace_style = K&R

[{COMMIT_EDITMSG,MERGE_MSG}]
trim_trailing_whitespace = true
max_line_length = 72
indent_style = space
indent_size = 4

[*.{cl,el,emacs,lisp,lsp,scm}]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{bat,cmd}]
end_of_line = crlf

[*.{clang-format,yml,yaml}]
indent_style = space
indent_size = 4

[*.srt]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = unset
