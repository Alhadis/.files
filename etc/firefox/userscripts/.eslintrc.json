{
	"extends": "@alhadis/eslint-config",
	"env": {"greasemonkey": true},
	"overrides": [{
		"files": "!shared.js",
		"rules": {
			"camelcase": ["error", {"allow": ["^GM_"]}]
		},
		"globals": {
			"filesafe": "readonly",
			"observe":  "readonly"
		}
	},{
		"files": "mw-*.js",
		"parserOptions": {
			"ecmaVersion": 5,
			"sourceType": "script"
		},
		"rules": {
			"no-var": 0,
			"vars-on-top": 0
		}
	},{
		"files": "w3-validator.js",
		"globals": {
			"installFileUpload": "readonly"
		}
	},{
		"files": "shared.js",
		"rules": {
			"no-unused-vars": ["error", {"varsIgnorePattern": "^(?:filesafe|observe)$"}]
		}
	}]
}
