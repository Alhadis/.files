{
	// Purge $HOME of .DS_Store junk generated by Finder.app
	Label = "com.alhadis.dsclean";
	ProgramArguments = (
		"/bin/sh", "-c",
		"~/.files/bin/dsclean -q ~; rm -fP ~/.DS_Store ~/*/.DS_Store"
	);
	EnableGlobbing = YES;
	RunAtLoad = YES;
	StandardErrorPath = "/dev/null";
	StandardOutPath = "/dev/null";
	StartInterval = 86400;
}
