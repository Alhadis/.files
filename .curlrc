# Tidier feedback
--fail
--show-error
--silent

# Masquerade as a modern browser running on macOS Monterrey
user-agent = "Mozilla/5.0 (Macintosh; Intel Mac OS X 10.15; rv:144.0) Gecko/20100101 Firefox/144.0"

# Retain previous URL when following redirects
referer = ";auto"

# Wait 60 seconds before timing out
connect-timeout = 60
